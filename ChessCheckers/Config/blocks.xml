<?xml version="1.0"?>
<configs>
<append xpath="/blocks">

<!-- Master To inherit from -->

<block name="ChesskersMaster">
	<property name="CreativeMode" value="Player"/>
	<property name="CanPickup" value="true"/>
	<property name="Material" value="MwoodReinforced"/>
	<property name="StabilitySupport" value="false"/> <!-- build restriction -->
	<property name="Shape" value="ModelEntity"/>
	<property name="Mesh" value="models"/>
	<property name="ImposterExchange" value="imposterQuarter" param1="154"/>
	<property name="IsTerrainDecoration" value="true"/>
	<property class="RepairItems"> <property name="resourceWood" value="10"/> </property>
	<drop event="Destroy" name="resourceWood" count="1,3"/>
	<drop event="Fall" name="terrDestroyedWoodDebris" count="1" prob="0.75" stick_chance="1"/>
	<property name="FilterTags" value="fbuilding,fwood"/>
	<property name="Model" value="#@modfolder:Resources/BCB.unity3d?BCBPrefab" param1="main_mesh"/>
</block>

<block name="ChesskersBoardMaster">
	<property name="Extends" value="woodFrameMaster"/>
	<property name="StabilitySupport" value="true"/> <!-- allow place pieces on top i hope -->
	<property name="IsTerrainDecoration" value="false"/> <!-- hopefully allows placingnext to eachother -->
	<property name="CanPickup" value="false"/>
</block>

